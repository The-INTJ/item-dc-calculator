{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/features/*": [
        "./src/features/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/mixology": [
        "./src/features/mixology"
      ],
      "@/mixology/*": [
        "./src/features/mixology/*"
      ],
      "@/mixology/components/*": [
        "./src/features/mixology/components/*"
      ],
      "@/mixology/contexts/*": [
        "./src/features/mixology/contexts/*"
      ],
      "@/mixology/hooks/*": [
        "./src/features/mixology/hooks/*"
      ],
      "@/mixology/lib/*": [
        "./src/features/mixology/lib/*"
      ],
      "@/mixology/services/*": [
        "./src/features/mixology/services/*"
      ],
      "@/mixology/server/*": [
        "./src/features/mixology/server/*"
      ],
      "@/mixology/types/*": [
        "src/features/mixology/lib/globals/*"
      ],
      "@/mixology/styles/*": [
        "./src/features/mixology/styles/*"
      ],
      "@/components/styles/*": [
        "./src/features/mixology/styles/components/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
